/**app.wxss**/
page {
  height: 100%;
  background: #e5e5e5;
  font-size: 24rpx;
  line-height: 40rpx;
} 
/*·------------------------------------------------------------------------------------------*/
/*·------------------------------------------------------------------------------------------*/
/*············ 页面样式重置*/
view{
    box-sizing: border-box;
}
image{
    width: 100%;
}




/*·------------------------------------------------------------------------------------------*/
/*·------------------------------------------------------------------------------------------*/
/*············ 辅助类*/
/* ---margin */
.mar-lr-10{
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.mar-r{
    margin-right: 0;
}
.mar-r-10{
    margin-right: 10rpx;
}
.mar-r-22{
    margin-right: 22rpx;
}
.mar-r-38{
    margin-right: 38rpx;
}
.mar-b-12{
    margin-bottom: 12rpx;
}
.pad-lr-18{
    padding-left: 18rpx;
    padding-right: 18rpx;
}
/* ---圆角 */
.r-10{
    border-radius: 10rpx;
}
.r-6{
    border-radius: 6rpx;
}
/* 字体 */
.font-m{
    font-size: 24rpx;
    color: #666;
}
.font-s{
    font-size: 20rpx;
    color: #9c9da3;
}
.font-l{
    font-size: 30rpx;
    color: #333;
}

/* 上标 */
.font-up{
    font-size: 18rpx;
    color: #9c9da3;
    vertical-align: 20rpx;
    margin-left: 6rpx;
}

/* ----- 图片 */
/* 评论的图片 */
.img-op{
    width: 30rpx;
    height: 30rpx;
}




/*·------------------------------------------------------------------------------------------*/
/*·------------------------------------------------------------------------------------------*/
/*············ 公共样式*/

/* ----------- . flex */
.flex-v{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.flex-h{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.flex-h-v{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.flex-h-s{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
/* ---------- . 绝对定位元素 */
.ab-c{
    position: absolute;
    left: 0;right: 0;
    bottom: 0;top: 0;
    margin: auto;
}
.ab-c-v{
    position: absolute;
    bottom: 0;top: 0;
    margin-top: auto;
    margin-bottom: auto;
}
.ab-c-h{
    position: absolute;
    left: 0;right: 0;
    margin-left: auto;
    margin-right: auto;
}



/* ---------背景颜色 */
.bg-w{
    background: #fff;
}
.bg-g{
    background: #e5e5e5;
}
/* -------- 图片100% */
.img{
    width: 100%;
}


/* ---------- . 文字处理 */

/*--超出一行隐藏  */
.only-one-line{
    max-width: 90%;
    display: inline-block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}


/*·------------------------------------------------------------------------------------------*/
/*·------------------------------------------------------------------------------------------*/
/*············ 公共组件*/


.tag{
    display: inline-block;
    padding: 4rpx 12rpx;
    border:1px solid transparent;
    background: transparent;
    border-radius: 10rpx;
}
.tag.theme1{
    border-color: #ca75ea;
    color: #ca75ea;
}
.tag.theme2{
    border-color: #f19ec2;
    color: #f19ec2;
}
.tag.theme3{
    border-color: #71befe;
    color: #71befe;
}
