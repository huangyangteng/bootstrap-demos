/* ----- upfile */
.upfile{
    display: inline-block;
    border: 1px dotted #dedede;
    box-sizing: border-box;
    border-radius: 10rpx;
    width: 114rpx;
    height: 114rpx;
    position: relative;
}
.upfile::before{
    content: '';
    width: 74rpx;
    height: 6rpx;
    background:#d8d8d8;
    position: absolute;

    margin: auto;
    bottom: 0;top: 0;
    left: 0;right: 0;
    
}
.upfile::after{
    content: '';
    width: 6rpx;
    height: 74rpx;
    background:#d8d8d8;
    position: absolute;
    margin: auto;
    bottom: 0;top: 0;
    left: 0;right: 0;
}

/* ---- 文字标题 */
.h-title{
    font-size: 30rpx;
    color: #333;
    line-height: 1;
    position: relative;
    margin-left: 24rpx;

}
.h-title.theme{
    color: #25aab2;
}

.h-title::before{
    content: '';
    width: 6rpx;
    height: 100%;
    background-color: #25aab2;
    position: absolute;
    left: -24rpx;
}

.h-list{
    font-size: 28rpx;
    color: #666;
    position: relative;
    margin-left: 24rpx;
    line-height: 60rpx;
}
.h-list::before{
    content: '';
    width: 10rpx;
    height: 10rpx;
    top: 0;bottom: 0;
    margin: auto;
    border-radius: 50%;
    position: absolute;
    background-color: #25aab2;
    left: -24rpx;
}




