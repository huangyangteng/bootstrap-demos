/* -------------特定样式 */

/* banner */
.index-c{
    margin: 66rpx 48rpx 0 48rpx;
    background: #fff;
}
.stack{
    position: relative;
    height: 830rpx;
    perspective: 1000px;
    perspective-origin: 50% 150%;
}
.stack-item{
    height: 830rpx;
    position: absolute;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);

}
 .stack-item:first-child{
    transform: translate3d(0,0,0);
    z-index: 10;

    opacity: 1;
    /* background: #333; */

}
.stack-item:nth-child(2){
    transform: translate3d(0,0,-100rpx);
    z-index: 2;
    opacity: 1;
}
.stack-item:nth-child(3){
    transform: translate3d(0,0,-200rpx);
    z-index: 1;
    opacity: 1;
}

