/* 公共样式 */
.icon-img{
    width: 38rpx;
    height: 38rpx;
}
.add-icon{
    width: 98rpx;
    height: 98rpx;
}
page{
    background: #fff;
}

/* 头部信息 */
.top-info.dynamic{
    line-height: 75rpx;
    text-align: center;
    position: relative;
}
.top-info.dynamic>image{
    width: 44rpx;
    height: 36rpx;
    position: absolute;
    right:20rpx;
    margin:auto;
    top:0;
    bottom:0;

}

.top-info.dynamic>button{
    margin-top: 6rpx;
    padding: 8rpx 58rpx 10rpx 58rpx;
    border: 1rpx solid transparent;
    font-size: 38rpx;
    display:inline-block;
    background:transparent;
    transition: 1s;
    border-radius: 10rpx;

}

.top-info.dynamic>button:first-child{
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}
.top-info.dynamic>button.last{
    border: 1rpx solid #26bab7;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
    color: #26bab7;
}
.top-info.dynamic>button.active{
    background: #26bab7;
    color: #fff;
}




/* 特定区域样式 */
.dynamic-container{
    padding: 18rpx;
}
/* 每一条动态 */
.dynamic{
    padding: 0 18rpx 48rpx 18rpx;
    margin-bottom: 18rpx;
    box-shadow: 0px 2px 30rpx rgba(0, 0, 0, 0.1);

}

.dynamic-h{
    height: 214rpx;
    justify-content: flex-start;
    margin-left: 18rpx;
    margin-right: 18rpx;
    border-bottom: 1px solid #e5e5e5;
}
/* 头像图片 */
.avatar-img{
    width: 132rpx;
    height: 132rpx;
    margin-right: 40rpx;
    margin-left: 20rpx;
}

.dynamic-b{
    padding: 42rpx 18rpx;
}


/* cover */
.edit{
    height: 260rpx;
    width: 100%;
    padding: 0 42rpx;
}


/* js */
.cover-show{
    visibility: visible;
    transition: .5s;
}
